package Operadores;


public class Lógicos {

	public static void main(String[] args) {
		// Notas exámenes del alumno
		int nota1 = 7;
		int nota2 = 9;
		int nota3 = 6;
		// Número total exámenes
		int numExamenes = 3;
		// Suma notas
		int sumaNotas = nota1 + nota2 + nota3;
		// Nota promedio
		double promedio = (double) sumaNotas / numExamenes;
		
		// --- 3. MOSTRAR RESULTADOS (Concatenación) ---
        
        System.out.println("--- CÁLCULO DE PROMEDIO ---");
        System.out.println("La suma de las notas es: " + sumaNotas);
        System.out.println("El promedio final es: " + promedio);
        
        // BONUS: Verifica si el promedio es mayor o igual a 7
        boolean aprobado = promedio >= 7.0; 
        System.out.println("¿El alumno está aprobado? " + aprobado);
		

	}

}