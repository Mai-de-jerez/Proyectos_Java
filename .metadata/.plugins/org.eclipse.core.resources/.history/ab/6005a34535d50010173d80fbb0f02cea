package modelo;

public class Taller {

	// creamos un atributo que sea un array llamado lista que almacene 
	private Coche[] lista;
	private int posicion; // hace refrencia al indice que ocupara cada objeto coche dentro de esa lista
	

	
	/**
	 * Método constructor que recibe un tamaño para la lista Coche[] e inicializa en cero dicha lista
	 * @param tamano para saber cuantos coches tendrá la lista
	 */
	public Taller (int tamano) {
		
		this.lista = new Coche[tamano];
		posicion = 0; // El índice para la próxima inserción (contador de coches)
	}
	
	/**
	 * Añade un objeto Coche al array 'lista' en la siguiente posición disponible, 
	 * siempre y cuando el parking no haya alcanzado su capacidad máxima (> lista.length)
	 * En caso de que el parking esté lleno, la operación se ignora.
	 * * @param c El objeto Coche que se desea aparcar.
	 */
	public void anadir(Coche c) {
		
		if(posicion < lista.length) {
		lista[posicion] = c;
		posicion++;
		
		}
	}
	
	/**
	 * Imprime la marca y el modelo de cada coche gracias a un bucle for que recorre el array lista y 
	 * obtiene la marca y el modelo de cada uno con getMarca() y getModelo()
	 */
	public void imprimirMarcas() {
		
		for (int i =0; i < lista.length; i++) {
			
			System.out.println("Marca: " +lista[i].getMarca()+" - Modelo: "+ lista[i].getModelo());
			
		}	
			
	}
	
	
	
}
