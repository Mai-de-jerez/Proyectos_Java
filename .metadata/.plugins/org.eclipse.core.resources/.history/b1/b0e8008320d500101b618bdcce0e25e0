package Variables;

public class ConversionDeTipos {

	public static void main(String[] args) {
		// Convertir String a Entero con la clase Integer
		System.out.println("\n--- CONVERSION A ENTERO ---");
		String numeroStr = "50";		
		int numeroInt = Integer.parseInt(numeroStr);
		System.out.println("Número entero: " + numeroInt);
		
		// Convertir String a Decimal con la clase Double
		System.out.println("\n--- CONVERSION A DECIMAL ---");
		String realStr = "19876.99e-3";
		double realDouble = Double.parseDouble(realStr);
		System.out.println("Número decimal: " + realDouble);
		
		// Convertir String a Booleano con la clase Boolean
		System.out.println("\n--- CONVERSION A BOOLEAN ---");
		String booleanStr = "true";	// o "false", "TRUE", "FALSE", "tRue"
		boolean booleanValue = Boolean.parseBoolean(booleanStr);
		System.out.println("Valor booleano: " + booleanValue);
		
		// Convertir String declarado con var a otros tipos
		System.out.println("\n--- CONVERSION DE VAR A ENTERO/DECIMMAL/BOOLEAN ---");
		var numStr = "123";
		var realDecimal= "45.67";
		var logicoBooleano = "false";
		// Ejemplos de conversiones a int/bool/double usando var con esas clases
		var numConvertido = Integer.toString(Integer.parseInt(numStr));
		var realConvertido = Double.toString(Double.parseDouble(realDecimal));
		var booleanConvertido = Boolean.toString(Boolean.parseBoolean(logicoBooleano));
		System.out.println("Var Número convertido a String: " + numConvertido);
		System.out.println("Var Decimal convertido a String: " + realConvertido);
		System.out.println("Var Booleano convertido a String: " + booleanConvertido);
		
		// Convertir un int a String usando la clase Integer
		System.out.println("\n--- CONVERSION UN ENTERO EN UN STRING CON LA CLASE INTEGER---");
		int entero = 250;
		System.out.println("Entero original: " + entero);
		String enteroStr = Integer.toString(entero);
		System.out.println("Entero convertido a String con la clase Integer: " + enteroStr);
		System.out.println("Suma del número mas el número: "+ (enteroStr + enteroStr));
		
		// Convertir de int a string usando la clase String
		System.out.println("\n--- CONVERSION A ENTERO ---");
		enteroStr = String.valueOf(entero + 10);
		System.out.println("Entero convertido a String con la clase String: " + enteroStr);
		
		// Convertir de double a String usando la clase Double
		double otroRealDouble = 3.1416e2;
		String doubleStr = Double.toString(otroRealDouble);
		System.out.println("Double convertido a String con la clase Double: " + doubleStr);
		
		// Convertir de float a String usando la clase String
		doubleStr = String.valueOf(3.1416e2f);
		System.out.println("Float convertido a String con la clase String: " + doubleStr);
		
		// Convertir un int a short
		int i = 33000;
		short s = (short) i; // Cast necesario (forzar la conversión
		System.out.println("Short: " + s);
		System.out.println("Entero: " + i);	
		
		// Convertir un int a long
		long l = i; // Conversión implícita de int a long
		System.out.println("Long: " + l);
		System.out.println("Valor máximo que soporta un short: "+Short.MAX_VALUE);
		
		
	}

}
