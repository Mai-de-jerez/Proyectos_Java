package Variables;

public class ValidarString {

	public static void main(String[] args) {
		
		String curso = null;
		
		boolean esNulo = curso == null;
		
		System.out.println("Es nulo: "+ esNulo);
		
		if(esNulo) {
			curso = "Programaci√≥n Java";			
		}
		
		System.out.println(curso.toUpperCase());
		/*
		 * System.out.println("Bienvenido al ".concat(curso));
		 * No podemos hacer esto porque nombre curso es nulo
		 */
		System.out.println("Bienvenido al curso " + curso);
		// imprime null en la posicion de curso
		
		
		
		
			
		
	}

}
