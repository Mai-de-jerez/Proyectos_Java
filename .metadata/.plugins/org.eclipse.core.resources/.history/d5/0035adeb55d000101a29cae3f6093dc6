package POO;

public class EjemploAutomovil {

	public static void main(String[] args) {
		
		
		// nuevo objeto de la clase Automovil
		Automovil subaru = new Automovil();
		
		// asignar atributos
		subaru.asignarFabricante("Subaru");
		subaru.asignarColor("rosa"); // podemos cambiar a rosa aunque pusieramos rojo en el constructor
		subaru.asignarModelo("Impreza");
		subaru.asignarCilindrada(2.0); 
		
		// creamos otro objeto
		Automovil mazda = new Automovil();
		// asignar atributos
		mazda.asignarFabricante("Mazda");
		mazda.asignarColor("azul"); // podemos cambiar a rosa aunque pusieramos rojo en el constructor
		mazda.asignarModelo("BT-50");
		mazda.asignarCilindrada(3.0); 
		System.out.println("Mazda fabricante: "+ mazda.leerFabricante());
		
		
		// vemos el resultado
		subaru.verDetalle();
		mazda.verDetalle();
		System.out.println(subaru.detalle2());
		System.out.println(mazda.detalle2());
		System.out.println(subaru.acelerar(3000));
		System.out.println(mazda.frenar());
		System.out.println(subaru.acelerarFrenar(4000));
		
		System.out.println("Km por litro: " + subaru.calcularConsumo(300, 0.6f));
		System.out.println("Km por litro: " + subaru.calcularConsumo(300, 60));
		
		
	}

}
