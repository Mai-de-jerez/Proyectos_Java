package Variables;

public class Metodos_del_String {

	public static void main(String[] args) {
		
		String nombre = "Andrés";
		// longitud del string
		System.out.println("Longitud del String: "+ nombre.length());
		// convertir a mayúsculas
		System.out.println("En mayúsculas: "+ nombre.toUpperCase());
		// convertir a minúsculas
		System.out.println("En minúsculas: "+nombre.toLowerCase());
		// comparar strings con equals()
		// discrimina entre tildes y Mayusculas
		System.out.println("Es Andrés lo mismo que Andres?: "+nombre.equals("Andres"));
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.equals("andrés"));
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.equals("Andrés"));
		// IgnoreCase() para que ignore las mayúsculas
		System.out.println("Es Andrés lo mismo que andrés usando ignoreCase()?: "+nombre.equalsIgnoreCase("andrés"));
		// compareTo() compara según el orden númerico de la tabla unicode
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.compareTo("andrés")); // devuelve -32 porque son distintas
		// Ha restado 65-97=-32
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.compareTo("Andrés")); // DEVUELVE CERO PORQUE SON IGUALES
		// charAt() retorna un caracter del String
		System.out.println("Primer caracter de Andrés: "+nombre.charAt(0));
		System.out.println("Segundo caracter de Andrés: "+nombre.charAt(1));
		System.out.println("Tercer caracter de Andrés: "+nombre.charAt(2));
		System.out.println("Cuarto caracter de Andrés: "+nombre.charAt(3));
		System.out.println("Quinto caracter de Andrés: "+nombre.charAt(4));
		System.out.println("Último caracter de Andrés: "+nombre.charAt(nombre.length()-1));
		// substring() para obtener una parte del String
		System.out.println("Obtener desde el índice 1 de Andrés: "+nombre.substring(1)); // se come la A
		System.out.println("Obtener desde el índice 2 de Andrés: "+nombre.substring(2)); // se come An
	
	
	}

}
