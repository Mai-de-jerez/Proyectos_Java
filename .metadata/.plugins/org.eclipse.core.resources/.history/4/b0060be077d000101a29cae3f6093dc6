package modelo;

public class Coche {
	
	// atributos que tendrá el objeto
	private int id;
	private String marca;
	private String modelo;
	private double precio;
	private String color;
	private int km;
	
	// Constructores
	// Con este puedes crear el objeto sin tener que pasar ningun parametro
	public Coche() {
	}
	

	public Coche(String marca, String modelo, double precio, String color, int km) {
		super();
		this.marca = marca;
		this.modelo = modelo;
		this.precio = precio;
		this.color = color;
		this.km = km;
	}
	
	
	

	public Coche(int id, String marca, String modelo, double precio, String color, int km) {
		super();
		this.id = id;
		this.marca = marca;
		this.modelo = modelo;
		this.precio = precio;
		this.color = color;
		this.km = km;
	}


	// Constructor donde pasas solo 2 parametros al crear el objeto 
	
	public Coche(String marca, String modelo, String color) {
		super();
		this.marca = marca;
		this.modelo = modelo;
		this.color = color;
	}


	// Métodos (todos se pueden generar solos dando a generar get() y set())
	
	public String getMarca() {
		return marca;
	}

	public void setMarca(String marca) {
		this.marca = marca;
	}

	public String getModelo() {
		return modelo;
	}

	public void setModelo(String modelo) {
		this.modelo = modelo;
	}

	public double getPrecio() {
		return precio;
	}

	public void setPrecio(double precio) {
		this.precio = precio;
	}

	public String getColor() {
		return color;
	}

	public void setColor(String color) {
		this.color = color;
	}

	public int getKm() {
		return km;
	}

	public void setKm(int km) {
		this.km = km;
	}
	
	/**
	 * Este método convierte automáticamente en millas los km al ser usado por el objeto
	 * @return los km en millas
	 */
	public double dameMillas() {
		return (this.km*1.6);
	}
	
	
	// Este metodo sirve para ver la salida como un array con los atributos
	// Este metodo se puede generar solo dandole a generar toString()
	@Override
	public String toString() {
		return "Coche [marca=" + marca + ", modelo=" + modelo + ", precio=" + precio + ", color=" + color + ", km=" + km
				+ "]";
	}
		
	
	
}
