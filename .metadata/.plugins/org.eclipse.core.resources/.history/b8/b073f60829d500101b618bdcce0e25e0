package Variables;

public class Metodos_del_String {

	public static void main(String[] args) {
		
		String nombre = "Andrés";
		// longitud del string
		System.out.println("Longitud del String: "+ nombre.length());
		// convertir a mayúsculas
		System.out.println("En mayúsculas: "+ nombre.toUpperCase());
		// convertir a minúsculas
		System.out.println("En minúsculas: "+nombre.toLowerCase());
		// comparar strings con equals()
		// discrimina entre tildes y Mayusculas
		System.out.println("Es Andrés lo mismo que Andres?: "+nombre.equals("Andres"));
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.equals("andrés"));
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.equals("Andrés"));
		// IgnoreCase() para que ignore las mayúsculas
		System.out.println("Es Andrés lo mismo que andrés usando ignoreCase()?: "+nombre.equalsIgnoreCase("andrés"));
		// compareTo() compara según el orden númerico de la tabla unicode
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.compareTo("andrés")); // devuelve -32 porque son distintas
		// Ha restado 65-97=-32
		System.out.println("Es Andrés lo mismo que andrés?: "+nombre.compareTo("Andrés")); // DEVUELVE CERO PORQUE SON IGUALES
		// charAt() retorna un caracter del String
		System.out.println("Primer caracter de Andrés: "+nombre.charAt(0));
		System.out.println("Segundo caracter de Andrés: "+nombre.charAt(1));
		System.out.println("Tercer caracter de Andrés: "+nombre.charAt(2));
		System.out.println("Cuarto caracter de Andrés: "+nombre.charAt(3));
		System.out.println("Quinto caracter de Andrés: "+nombre.charAt(4));
		System.out.println("Último caracter de Andrés: "+nombre.charAt(nombre.length()-1));
		// substring() para obtener una parte del String
		System.out.println("Obtener desde el índice 1 de Andrés: "+nombre.substring(1)); // se come la A
		System.out.println("Obtener desde el índice 2 de Andrés: "+nombre.substring(2)); // se come An
		// substring() puede recibir dos argumentos (el desde y el hasta)
		System.out.println("Obtener desde el índice 2 hasta el 5 de Andrés: "+nombre.substring(2,5)); // se come An y la s final
		// si quiero el primero
		System.out.println("Obtener desde el índice 0 de Andrés: "+nombre.substring(0)); // todo el string
		// si quiero el último
		System.out.println("Obtener el último caracter de Andrés con substring() y length(): "+nombre.substring(nombre.length()-1));
		System.out.println("Obtener dos último caracteres de Andrés con substring() y length(): "+nombre.substring(nombre.length()-2));
		
		String trabalenguas = "trabalenguas";
		// reemplazar un caracter
		System.out.println("Reemplazar la a por un x en trabalenguas con replace(): "+ trabalenguas.replace("a", "x"));
		// el string original no varia
		System.out.println("Imprimir trabalenguas: "+ trabalenguas);
		// indexOf() para buscar la posicion de un caracter
		System.out.println("Encontrar la posición de la letra a en trabalenguas con indexOf(): "+ trabalenguas.indexOf("a"));
		// encontrar con indexOf() la ultima ocurrencia de un caracter
		System.out.println("Encontrar la última ocurrencia de la letra a en trabalenguas con lastIndexOf(): "+ trabalenguas.lastIndexOf("a"));
		// si no encuentra el caracter retorna -1
		// Saber si se encuentra el caracter en el string
		System.out.println("Encontrar si está la letra a en trabalenguas con contains(): "+ trabalenguas.contains("a"));
		System.out.println("Encontrar si trabalenguas contiene el string lenguas con contains(): "+ trabalenguas.contains("lenguas"));
		// saber si un string comienza por determinado string o letra
		System.out.println("Saber si trabalenguas comienza por a con startsWith(): "+ trabalenguas.startsWith("a"));
		System.out.println("Saber si trabalenguas comienza por traba con startsWith(): "+ trabalenguas.startsWith("traba"));
		// saber si un string termina por una letra o string determinado
		System.out.println("Saber si trabalenguas termina por traba con endsWith(): "+ trabalenguas.endsWith("traba"));
		System.out.println("Saber si trabalenguas termina por guas con endsWith(): "+ trabalenguas.endsWith("guas"));
		
		
		
	}

}
