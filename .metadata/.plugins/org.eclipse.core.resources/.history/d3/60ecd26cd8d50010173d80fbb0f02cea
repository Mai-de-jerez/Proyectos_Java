package modelo;

import modelo.Flota;

public class Nave {

	// Atributos 
	
	private String nombre;
	private Faccion faccion;
	private int misiles;
	private boolean necesitaReparacion;
	
	
	// Constructores
	
	public Nave(String nombre, Faccion faccion, int misiles, boolean necesitaReparacion) {
		super();
		this.nombre = nombre;
		this.faccion = faccion;
		this.misiles = misiles;
		this.necesitaReparacion = necesitaReparacion;
	}
	
	// por si el usuario pasa la faccion como un string
	
	public Nave(String nombre, String faccionString, int misiles, boolean necesitaReparacion) {
	    this.nombre = nombre;
	    this.misiles = misiles;
	    this.necesitaReparacion = necesitaReparacion;

	   
	    Faccion faccion = Flota.validarFaccion(faccionString);
	    
	    if (faccion == null) {
	        // Opción A: Asignar un valor por defecto si es inválido (ej. TIERRA)
	        this.faccion = Faccion.TIERRA; 
	        System.err.println("Advertencia: Facción '" + faccionString + "' inválida en constructor. Se asignó TIERRA por defecto.");
	        
	        // Opción B: Lanzar una excepción (más limpio, pero no lo quieres)
	        // throw new IllegalArgumentException("Faccion no válida: " + faccionString);
	    } else {
	        this.faccion = faccion;
	    }
	}
	
	
	public Nave() {
		
	}
	
		
	// GETTERS AND SETTERS
	
	public String getNombre() {
		return nombre;
	}


	public void setNombre(String nombre) {
		this.nombre = nombre;
	}


	public Faccion getFaccion() {
		return faccion;
	}


	public void setFaccion(Faccion faccion) {
		this.faccion = faccion;
	}


	public int getMisiles() {
		return misiles;
	}


	public void setMisiles(int misiles) {
		this.misiles = misiles;
	}


	public boolean isNecesitaReparacion() {
		return necesitaReparacion;
	}


	public void setNecesitaReparacion(boolean necesitaReparacion) {
		this.necesitaReparacion = necesitaReparacion;
	}
	
	
	// MÉTODO toString() sobreescrito para que no me muestre en mayúsculas la faccion
	
	@Override
	public String toString() {
		return "Nave [nombre=" + nombre + ", faccion=" + this.faccion.getNombreVisible() + ", misiles=" + misiles + ", necesitaReparacion="
				+ necesitaReparacion + "]";
	} 
	
	
	
}

