package POO;

public class EjemploAutomovil {

	public static void main(String[] args) {
		
		
		// nuevo objeto de la clase Automovil
		Automovil subaru = new Automovil();
		
		// asignar atributos
		subaru.setFabricante("Subaru");
		subaru.setColor("rosa"); // podemos cambiar a rosa aunque pusieramos rojo en el constructor
		subaru.setModelo("Impreza");
		subaru.setCilindrada(2.0); 
		
		// creamos otro objeto
		Automovil mazda = new Automovil();
		// asignar atributos
		mazda.setFabricante("Mazda");
		mazda.setColor("azul"); // podemos cambiar a rosa aunque pusieramos rojo en el constructor
		mazda.setModelo("BT-50");
		mazda.setCilindrada(3.0); 
		System.out.println("Mazda fabricante: "+ mazda.getFabricante());
		
		
		// Vemos el resultado
		subaru.verDetalle();
		mazda.verDetalle();
		System.out.println(subaru.detalle2());
		System.out.println(mazda.detalle2());
		System.out.println(subaru.acelerar(3000));
		System.out.println(mazda.frenar());
		System.out.println(subaru.acelerarFrenar(4000));
		
		System.out.println("Km por litro: " + subaru.calcularConsumo(300, 0.6f));
		System.out.println("Km por litro: " + subaru.calcularConsumo(300, 60));
		
		
	}

}
