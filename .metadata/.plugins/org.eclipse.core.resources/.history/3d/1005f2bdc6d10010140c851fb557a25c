package POO_Clase_Cuenta;

public class CajeroAutomático {

	public static void main(String[] args) {
		// 1. Creación de una cuenta con saldo inicial de 1000€
        Cuenta cuenta1 = new Cuenta("Javier Perez", 1000.0);
        System.out.println(cuenta1.toString()); // Saldo: 1000.0€
        
        // 2. Prueba de INGRESAR (Ahora es suma, no reemplazo)
        cuenta1.ingresar(200.0);
        System.out.println("Ingreso de 200€: " + cuenta1.getCantidad() + "€"); // Esperado: 1200.0€
        
        // 3. Prueba de RETIRAR SIN dejar el saldo en negativo
        cuenta1.retirar(500.0);
        System.out.println("Retiro de 500€: " + cuenta1.getCantidad() + "€"); // Esperado: 700.0€
        
        // 4. Prueba de RETIRAR FORZANDO el saldo a cero
        cuenta1.retirar(900.0); // Retira más de lo que tiene (700 - 900 = -200)
        System.out.println("Retiro de 900€: " + cuenta1.getCantidad() + "€"); // Esperado: 0.0€
    }
}