package POO_Persona;
import java.util.Scanner;
import java.util.ArrayList; // ⬅️ ¡Necesario para las listas!
import java.util.List;

public class Main {

	
	public static void main(String[] args) {
        /*
         * Leemos los datos para luego usarlos en la persona 1
         */
        Scanner lector = new Scanner(System.in); 

   
        System.out.println("Introduce el nombre: ");
        String nombre = lector.nextLine(); 
    
        System.out.println("Introduce la edad: ");
        int edad = lector.nextInt(); 
   
        lector.nextLine(); 

        System.out.println("Introduce el sexo (H/M): ");
  
        char sexo = lector.nextLine().toUpperCase().charAt(0); 
   
        System.out.println("Introduce el peso (kg): ");
        double peso = lector.nextDouble();

        lector.nextLine();

        System.out.println("Introduce la altura (cm): ");
        int altura = lector.nextInt(); 
    
        lector.nextLine();
     
        lector.close();
        
        System.out.println();
        /*
         * Asignamos los atributos a través de los constructores
         */
        Persona persona1 = new Persona(nombre, edad,null, sexo, peso, altura);
        Persona persona2 = new Persona("Eduardo", 50, 'H');
        Persona persona3 = new Persona();
        persona3.setNombre("Rosa");
        persona3.setEdad(44);
        persona3.setSexo('M');
        persona3.setPeso(100);
        persona3.setAltura(170);
        
        /*
         * Compriobamos para cada persona su estado de salud a través de un bucle para iterar en ellas y el metodo calcularIMC()
         */
     
        
        // Creamos un ArrayList para almacenarlos
        
        List<Persona> listaPersonas = new ArrayList<>();
    
	    listaPersonas.add(persona1);
	    listaPersonas.add(persona2);
	    listaPersonas.add(persona3);

	    int contador = 1;
	    for (Persona p : listaPersonas) {
	         
	 
	        int codigoIMC = p.calcularIMC();
	         
	   
	        if (codigoIMC == -1) {
	             System.out.println("Persona "+contador+": Infrapeso (Peso demasiado bajo).");       	
	         } else if (codigoIMC == 0) {
	             System.out.println("Persona "+contador+": Peso ideal (Peso óptimo).");  
	         } else { 
	             System.out.println("Persona "+contador+": Sobrepeso (Peso demasiado alto).");  
	         }
	         
	      contador++;
	
		}
	    
	    
	    System.out.println();
	    
	    /*
	     * Comprobamos si son mayores de edad
	     */
	    System.out.println("Persona 1 es mayor de edad: "+persona1.esMayorDeEdad());
	    System.out.println("Persona 2 es mayor de edad: "+persona2.esMayorDeEdad());
	    System.out.println("Persona 3 es mayor de edad: "+persona3.esMayorDeEdad());
	    System.out.println();
	    
		/*
		 * Mostramos la información de cada persona    
		 */
	    System.out.println("Información persona 1: " + persona1.toString()); 
	    System.out.println("Información persona 2: " + persona2.toString()); 
	    System.out.println("Información persona 3: " + persona3.toString()); 
    }
}
