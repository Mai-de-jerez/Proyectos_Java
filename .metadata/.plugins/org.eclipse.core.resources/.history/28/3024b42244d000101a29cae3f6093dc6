package POO;

public class Automovil {
	
	// Atributos
	String fabricante;
	String modelo;
	String color = "rojo"; // asignas color aqui
	double cilindrada;
	
	// Métodos:
	
	// Método que imprime el detalle del vehiculo
	public void detalle() {
		System.out.println("Fabricante auto: "+ this.fabricante);
		System.out.println("Modelo auto: "+ this.modelo);
		System.out.println("Color auto: "+ this.color);
		System.out.println("Cilindrada auto: "+ this.cilindrada);
	}
	
	// Método que imprime el detalle del vehiculo (otra forma)
	public String detalle2() {
		StringBuilder sb = new StringBuilder();
		sb.append("Fabricante auto: "+ this.fabricante);
		sb.append("Modelo auto: "+ this.modelo);
		sb.append("Color auto: "+ this.color);
		sb.append("Cilindrada auto: "+ this.cilindrada);
		return sb.toString();
	}
	
	 
	
	
}
