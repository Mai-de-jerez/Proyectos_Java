package POO;

public class Automovil {
	
	// Atributos
	private String fabricante;
	private String modelo;
	private String color = "rojo"; // asignas color aqui
	private double cilindrada;
	private int capacidadEstanque = 40;
	
	// como los métodos son privados no se pueden leer desde fuera de la clase
	// hay que hacerlo asi
	public String leerFabricante() {
		return this.fabricante;
	}
	
	public String leerModelo() {
		return this.modelo;
	}
	
	public String leerColor() {
		return this.color;
	}
	
	public double leerCilindrada() {
		return this.cilindrada;
	}
	
	public int leercapacidadEstanque() {
		return this.capacidadEstanque;
	}
	
	// Métodos:
	
	// Método que imprime el detalle del vehiculo
	public void verDetalle() {
		System.out.println("\nFabricante auto: "+ this.fabricante);
		System.out.println("Modelo auto: "+ this.modelo);
		System.out.println("Color auto: "+ this.color);
		System.out.println("Cilindrada auto: "+ this.cilindrada);
	}
	
	// Método que imprime el detalle del vehiculo (otra forma)
	public String detalle2() {
		StringBuilder sb = new StringBuilder();
		sb.append("\nFabricante auto: "+ this.fabricante);
		sb.append("\nModelo auto: "+ this.modelo);
		sb.append("\nColor auto: "+ this.color);
		sb.append("\nCilindrada auto: "+ this.cilindrada);
		return sb.toString();
	}
	
	public String acelerar(int rpm) {
		return "El auto " + this.fabricante + " acelerando a " + rpm + " rpm";
	}
	
	public String frenar() {
		return this.fabricante + " " + this.modelo + " frenando." ;
	}
	
	public String acelerarFrenar (int rpm) {
		String acelerar = this.acelerar(rpm);
		String frenar = this.frenar();
		return acelerar + "\n" + frenar;
	}
	
	// sobrecarga de métodos
	public float calcularConsumo(int km, float porcentajeBencina) {
		return km/(capacidadEstanque*porcentajeBencina);
	}
	
	public float calcularConsumo(int km, int porcentajeBencina) {
		return km/(capacidadEstanque*(porcentajeBencina/100f));
	} 
	
	
}
