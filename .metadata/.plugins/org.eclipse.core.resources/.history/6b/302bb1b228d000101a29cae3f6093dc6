package HolaMundo;
public class HolaMundo {

	public static void main(String[] args) {
		// Variables:
		// Tipo String
		String saludar = "Hola Mundo desde Java";
		System.out.print(saludar);
		
		// Tipo númericos
		// Enteros
		int numero = 10;
		System.out.println(numero);
		// Booleanos (true o false)
		boolean valor = true;
		
		int numero2=5;
		if (valor) {
			System.out.println(numero);
			numero2 = 10;
		}
		
		System.out.println(numero2); 
		
		// variable flexible (var)
		var numero3 = 6; // tipo númerica
		var cadena = "Amanda"; // tipo string
		var numero4 = "8"; // tipo string
		var caracter = '4'; // tipo char
		var caracter2 = 'R'; // tipo char
		System.out.println("Número: "+ numero3);
		System.out.println("String: "+ cadena);
		System.out.println("Número: "+ numero4);
		System.out.println("Caracter: "+ caracter);
		System.out.println("Caracter: "+ caracter2);
		
	} 

}
