package Variables;

public class EjemploString {

	public static void main(String[] args) {
		// crear un string
		String curso = "Programación Java";
		// otra forma
		String curso2 = new String("Programación Java");
		// los comparamos
		boolean esIgual = curso == curso2;
		System.out.println(esIgual); // da false porque no se puede comparar strings con ==
		
		esIgual = curso.equals(curso2);
		System.out.println(esIgual); // es true porque aqui se compara la cadena no el objeto
		// equals() discrimina entre mayusculas y minusculas y entre tildes y no tildes
		// para que ignore las mayusculas puedes usar IgnoreCase() 
		String uno = "Pepa";
		String dos = "pepa";
		
		esIgual = dos.equals(uno);
		System.out.println(esIgual); 
		
		esIgual = dos.equalsIgnoreCase(uno);
		System.out.println(esIgual); 
		
	}

}
