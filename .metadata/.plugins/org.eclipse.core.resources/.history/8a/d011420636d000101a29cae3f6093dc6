package Variables;

public class EjemploString {

	public static void main(String[] args) {
		// crear un string
		String curso = "Programación Java";
		// otra forma
		String curso2 = new String("Programación Java");
		// los comparamos
		boolean esIgual = curso == curso2;
		System.out.println(esIgual); // da false porque no se puede comparar strings con ==
		
		esIgual = curso.equals(curso2);
		System.out.println(esIgual); // es true porque aqui se compara la cadena no el objeto
		// equals() discrimina entre mayusculas y minusculas y entre tildes y no tildes
		// para que ignore las mayusculas puedes usar IgnoreCase() 
		String uno = "Pepa";
		String dos = "pepa";
		
		// dira que no son iguales por la mayuscula
		esIgual = dos.equals(uno);
		System.out.println("String dos es igual a String uno si no usamos ignoreCase(): "+esIgual);
		
		// asi si da true
		esIgual = dos.equalsIgnoreCase(uno);
		System.out.println("String dos es igual a String uno si usamos ignoreCase(): "+esIgual); 
		
		// Ojo a ESTO!!:
		// Si creo dos objetos distintos con misma cadena
		String cosa1 = "cosa";
		String cosa2 = "cosa";
		// y los comparo
		boolean resultado = cosa1==cosa2;
		System.out.println("String cosa1 es igual a String cosa2: "+resultado);
		
	}

}
